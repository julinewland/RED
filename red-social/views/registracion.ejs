<body>
    <%- include("headerDeslogueado")%>
    <main>
        <div class="contenedor">
            <h1>Registrate</h1>
      
            <!-- LOGIN FORM -->
            <form action="/home" method="post">
            <div class="select">
              <div class="form-group">
                      <label>Email</label>
              </div>
              <div class="form-group">
                      <input type="email" class="form-control" name="username" placeholder="Tu email...">
                  </div>
            </div>
            <div class="select">
              <div class="form-group">
                      <label>Usuario</label>
              </div>
              <div class="form-group">
                      <input type="text" class="form-control" name="name" placeholder="Tu nombre de usuario...">
                  </div>
            </div>
            <div class="select">
              <div class="form-group">
                      <label>Contraseña</label>
              </div>
              <div class="form-group">
                      <input type="password" class="form-control" name="surname" placeholder="Contraseña..">
                  </div>
            </div>
            <div class="select">
              <div class="form-group">
                      <label>Repetir contraseña</label>
              </div>
              <div class="form-group">
                      <input type="password" class="form-control" name="password" placeholder="Repetí tu copntraseña">
                  </div>
            </div>
            <div class="select button">
              <button type="submit" class="btn btn-warning btn-lg">Registrarme</button>
              <a href="/login">¿Ya tenes cuenta? Ingresá acá.</a>
            </div>
      
            </form>
      </div>
    </main>
    <%- include("footer")%>
</body>

</html>